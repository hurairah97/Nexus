
@{
    ViewBag.Title = "unorder";
}
<head>
    <style>
        body {
            width: 100%;
            height: 70vh;
            background: linear-gradient(-45deg,#EE7752, #E73C7E,#23A6D5,#23D5AB );
            background-size: 400% 400%;
            position: relative;
            animation: change 07s ease-in-out infinite;
        }

        @@-webkit-keyframes change {
            0% {
                background-position: 0 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0 50%;
            }
        }

        .abc {
            margin-top: 200px;
            margin-bottom: 100px;
            text-align: center;
            color: black;
        }
    </style>
</head>
@{Html.BeginForm();}
<body>
    <div class="container">
        <div class="abc">
            <h1>BILL AMOUNT</h1>
            The service amount is : <b>@ViewBag.txt $.</b>
            <br />
            The government tax is : <b>@ViewBag.tax $.</b>
            <br />
            The total bill amount is : <b>@ViewBag.bill $.</b>
            <br />
        </div>
    </div>
</body>
@{Html.EndForm();}